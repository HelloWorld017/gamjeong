{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "noEmit": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
